<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="300003" android-versionName="1.0.6" id="nl.bettink.WindUp" ios-CFBundleVersion="1.0.0" version="3.0.9" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Windup</name>
    <description>
        Bettink - Windup mobile application
    </description>
    <author email="dev@freshapple.nl" href="https://freshapple.nl">
        Fresh Apple
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="android-targetSdkVersion" value="26" />
